<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_desserts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F44336"
    tools:context="com.example.tommylee.restaurant.Desserts">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dessert_apple_rose"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dessert_apple_rose_mini_tarts"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Apple Rose"
            android:layout_toRightOf="@id/dessert_apple_rose"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="16sp"
            android:textColor="#000000"
            android:id="@+id/apple_rose_text_view" />
        <ImageView
            android:id="@+id/dessert_brandy"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dessert_brandy"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/dessert_apple_rose"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Brandy"
            android:textColor="#000000"
            android:id="@+id/brandy_text_view"
            android:layout_below="@+id/dessert_apple_rose"
            android:layout_alignLeft="@+id/apple_rose_text_view"
            android:layout_alignStart="@+id/apple_rose_text_view"
            android:layout_marginTop="55dp" />
        <ImageView
            android:id="@+id/dessert_chocolate"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dessert_chocolate"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/dessert_brandy"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Chocolate Cake"
            android:textColor="#000000"
            android:id="@+id/chocolate_text_view"
            android:layout_marginTop="51dp"
            android:layout_below="@+id/dessert_brandy"
            android:layout_alignLeft="@+id/brandy_text_view"
            android:layout_alignStart="@+id/brandy_text_view" />
        <ImageView
            android:id="@+id/desserts_milky"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/desserts"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/dessert_chocolate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Milky Chocolate"
            android:textColor="#000000"
            android:id="@+id/miilky_chocolate_text_view"
            android:layout_below="@id/dessert_chocolate"
            android:layout_alignLeft="@+id/chocolate_text_view"
            android:layout_alignStart="@+id/chocolate_text_view"
            android:layout_marginTop="61dp" />

    </RelativeLayout>

</ScrollView>
